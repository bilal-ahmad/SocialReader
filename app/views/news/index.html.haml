#container-inner

  %h1 Listing news

  %table
    %tr
      %th Headline
      %th Description
      %th Image
      %th Source
      %th
      %th
      %th

    - @news.each do |news|
      %tr
        %td= news.headline
        %td= news.description
        %td= news.image
        %td= news.source_id
        %td= link_to 'Show', news
        %td= link_to 'Edit', edit_news_path(news)
        %td= link_to 'Destroy', news, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New News', new_news_path
