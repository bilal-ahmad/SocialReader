= form_for @source do |f|
  - if @source.errors.any?
    #error_explanation
      %h2= "#{pluralize(@source.errors.count, "error")} prohibited this source from being saved:"
      %ul
        - @source.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :status
    = f.check_box :status
  .actions
    = f.submit 'Save'
